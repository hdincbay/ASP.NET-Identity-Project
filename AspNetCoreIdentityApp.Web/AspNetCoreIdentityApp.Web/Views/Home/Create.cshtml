@model AspNetCoreIdentityApp.Web.ViewModels.SignUpViewModel
@{
    ViewData["Title"] = "Create";
}
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="col-md-6 offset-md-3">
    <div class="display-6">KULLANICI KAYIT FORMU</div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    
    <form method="post" asp-controller="Home" asp-action="Create">
        <div class="form-group my-2">
            <label asp-for="UserName"></label>
            <input type="text" asp-for="UserName" class="form-control"/>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" class="form-control"/>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="Phone"></label>
            <input type="text" asp-for="Phone" class="form-control"/>
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control"/>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div> 
        <div class="form-group my-2">
            <label asp-for="PasswordConfirm"></label>
            <input type="password" asp-for="PasswordConfirm" class="form-control" />
            <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>

