@model List<UserViewModel>
@{
    ViewData["Title"] = "UserList";
}
<div class="display-6 text-center">ÜYE LİSTE</div>
<br />
<table class="table table-hover text-center">
    <thead class="lead">
        <tr>
            <td>Id</td>
            <td>Kullanıcı Adı</td>
            <td>Email</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
            </tr>
        }
    </tbody>
</table>


